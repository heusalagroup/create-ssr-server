{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    //"declaration": true,
    //"declarationDir": "./dist",
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "noEmit": true
  },
  "include": [
    "./src/rollup.d.ts",
    "./src/project-ssr-server.ts"
  ]
}
